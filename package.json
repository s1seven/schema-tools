{
  "name": "@s1seven/schema-tools",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "private": false,
  "publicConfig": {
    "access": "public"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/s1seven/schema-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s1seven/schema-tools.git"
  },
  "bugs": {
    "url": "https://github.com/s1seven/schema-tools/issues"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && npm install",
    "format": "nx format",
    "format:all": "prettier --write \"packages/**/*.{ts,json}\"",
    "cleanup": "nx run-many --target=cleanup --all",
    "reset": "npm run cleanup && rimraf -rf node_modules && npm run bootstrap",
    "build": "nx run-many --target=build --all",
    "build:no-cache": "nx run-many --target=build --all --skip-nx-cache",
    "build:affected": "nx affected --target=build",
    "lint": "nx run-many --target=lint --all",
    "lint:affected": "nx affected --target=lint",
    "lint:staged": "npx lint-staged",
    "lint:commit": "npx --no -- commitlint --edit $1",
    "prepare": "npm run format && npm run lint",
    "test": "DEBUG=schema-tools-* nx run-many --target=test --all",
    "test:no-cache": "DEBUG=schema-tools-* nx run-many --target=test --all --skip-nx-cache",
    "test:affected": "DEBUG=schema-tools-* nx affected --target=test",
    "test:cov": "nx run-many --target=test:cov --all && node merge-coverage.js",
    "test:cov:affected": "nx affected --target=test:cov && node merge-coverage.js",
    "test:coverage": "jest --ci --coverage --logHeapUsage --forceExit && node coverage-transform.js",
    "test:staged": "nx run-many --target=test:staged --all",
    "test:browser": "rimraf -rf ./dist && nx run-many --target=test:browser --all",
    "test:browser:affected": "rimraf -rf ./dist && nx affected --target=test:browser",
    "test:certificate-model": "nx test @s1seven/schema-tools-certificate-model",
    "test:certificate-summary": "nx test @s1seven/schema-tools-certificate-summary",
    "test:extract-emails": "nx test @s1seven/schema-tools-extract-emails",
    "test:extract-emails:browser": "nx test:browser @s1seven/schema-tools-extract-emails",
    "test:generate-html": "nx test @s1seven/schema-tools-generate-html",
    "test:generate-interfaces": "nx test @s1seven/schema-tools-generate-interfaces",
    "test:generate-coa-pdf": "nx test @s1seven/schema-tools-generate-coa-pdf-template",
    "test:generate-en10168-pdf": "nx test @s1seven/schema-tools-generate-en10168-pdf-template",
    "test:generate-pdf-helpers": "nx test @s1seven/schema-tools-generate-pdf-template-helpers",
    "test:generate-pdf": "nx test @s1seven/schema-tools-generate-pdf",
    "test:utils": "nx test @s1seven/schema-tools-utils",
    "test:validate": "nx test @s1seven/schema-tools-validate",
    "test:validate:browser": "nx test:browser @s1seven/schema-tools-validate",
    "test:versioning": "nx test:cov @s1seven/schema-tools-versioning",
    "scan:deps": "nx run-many --target=scan:deps --all",
    "scan:code": "sonarqube-verify",
    "graph": "npx nx graph",
    "prepublishOnly": "npm run build",
    "version": "lerna version",
    "release": "npm run version && lerna publish from-package",
    "publish": "lerna publish",
    "repair": "lerna repair",
    "fixtures:interfaces": "ts-node ./utils/create-schema-interfaces.ts",
    "fixtures:html": "ts-node ./utils/create-html-certificate.ts",
    "fixtures:pdf": "ts-node ./utils/create-pdf-certificate.ts",
    "fixtures:generate": "ts-node ./utils/generate-fixtures-from-json.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@lerna/publish": "5.5.2",
    "@lerna/run": "5.5.2",
    "@nrwl/nx-cloud": "latest",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "audit-ci": "^5.1.2",
    "browserfs": "^1.4.3",
    "danger": "^11.2.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.11.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "istanbul-lib-coverage": "^3.2.0",
    "istanbul-lib-report": "^3.0.0",
    "istanbul-reports": "^3.1.4",
    "jest": "^27.5.1",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-cli": "^2.0.0",
    "karma-jasmine": "^5.1.0",
    "karma-typescript": "^5.5.3",
    "karma-webpack": "^5.0.0",
    "lato-font": "^3.0.0",
    "lerna": "^5.5.2",
    "lint-staged": "^12.3.4",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "nx": "14.4.3",
    "prettier": "2.5.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5",
    "weak-napi": "^2.0.2",
    "webpack": "^5.69.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.4",
    "yargs": "^17.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint"
    ]
  }
}
