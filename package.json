{
  "name": "@s1seven/schema-tools",
  "private": false,
  "publicConfig": {
    "access": "public"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/s1seven/schema-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s1seven/schema-tools.git"
  },
  "bugs": {
    "url": "https://github.com/s1seven/schema-tools/issues"
  },
  "engines": {
    "node": ">=11",
    "npm": ">=6"
  },
  "scripts": {
    "bootstrap": "npm install lerna && lerna bootstrap && npm install",
    "format": "prettier --write \"packages/**/*.{ts,json}\"",
    "reset": "npm run cleanup && rimraf -rf node_modules && npm run bootstrap",
    "test": "lerna run test",
    "build": "npm run cleanup && lerna run compile",
    "cleanup": "lerna run cleanup --stream --parallel",
    "lint": "lerna run lint",
    "lint:staged": "lint-staged",
    "prepare": "npm run format && npm run lint",
    "prepublishOnly": "npm run build",
    "version": "lerna version",
    "release": "read -p 'GITHUB_TOKEN: ' GITHUB_TOKEN && export GITHUB_TOKEN=$GITHUB_TOKEN && npm run version && lerna publish from-package"
  },
  "devDependencies": {
    "@lerna/publish": "3.22.1",
    "@lerna/run": "3.21.0",
    "@types/jest": "26.0.12",
    "@types/node": "14.0.27",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "26.4.2",
    "jest-junit": "11.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "2.1.1",
    "rimraf": "^3.0.2",
    "standard-version": "9.0.0",
    "ts-jest": "26.3.0",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "pre-commit": [
    "lint:staged",
    "test"
  ]
}
