{
  "name": "@s1seven/schema-tools",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "private": false,
  "publicConfig": {
    "access": "public"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/s1seven/schema-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s1seven/schema-tools.git"
  },
  "bugs": {
    "url": "https://github.com/s1seven/schema-tools/issues"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "format": "nx format",
    "format:all": "prettier --write \"packages/**/*.{ts,json}\"",
    "cleanup": "nx run-many --target=cleanup --all",
    "bump:patch": "nx run-many --all --target=version --releaseAs=patch --parallel=1",
    "bump:patch:affected": "nx affected --target=version --releaseAs=patch --parallel=1",
    "bump:minor": "nx run-many --all --target=version --releaseAs=minor --parallel=1",
    "bump:minor:affected": "nx affected --target=version --releaseAs=minor --parallel=1",
    "release": "nx affected --target=release --parallel=1",
    "publish": "nx affected --target=publish --parallel=1",
    "reset": "npm run cleanup && rimraf -rf node_modules && npm install",
    "build": "nx run-many --target=build --all",
    "build:no-cache": "nx run-many --target=build --all --skip-nx-cache",
    "build:affected": "nx affected --target=build",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "lint:no-cache": "nx run-many --target=lint --all --skip-nx-cache",
    "lint:affected": "nx affected --target=lint",
    "lint:staged": "npx lint-staged",
    "lint:commit": "npx --no -- commitlint --edit $1",
    "prepare": "npm run format && npm run lint",
    "test": "DEBUG=schema-tools-* nx run-many --target=test --all",
    "test:no-cache": "DEBUG=schema-tools-* nx run-many --target=test --all --skip-nx-cache",
    "test:affected": "DEBUG=schema-tools-* nx affected --target=test",
    "test:cov": "nx run-many --target=test --all && node merge-coverage.js",
    "test:cov:affected": "nx affected --target=test && node merge-coverage.js",
    "test:coverage": "jest --ci --coverage --logHeapUsage --forceExit && node coverage-transform.js",
    "test:staged": "nx run-many --target=test:staged --all",
    "test:certificate-model": "nx test @s1seven/schema-tools-certificate-model",
    "test:certificate-summary": "nx test @s1seven/schema-tools-certificate-summary",
    "test:extract-emails": "nx test @s1seven/schema-tools-extract-emails",
    "test:generate-html": "nx test @s1seven/schema-tools-generate-html",
    "test:generate-interfaces": "nx test @s1seven/schema-tools-generate-interfaces",
    "test:generate-coa-pdf": "nx test @s1seven/schema-tools-generate-coa-pdf-template",
    "test:generate-en10168-pdf": "nx test @s1seven/schema-tools-generate-en10168-pdf-template",
    "test:generate-pdf-helpers": "nx test @s1seven/schema-tools-generate-pdf-template-helpers",
    "test:generate-pdf": "nx test @s1seven/schema-tools-generate-pdf",
    "test:utils": "nx test @s1seven/schema-tools-utils",
    "test:validate": "nx test @s1seven/schema-tools-validate",
    "test:versioning": "nx test:cov @s1seven/schema-tools-versioning",
    "scan:deps": "nx run-many --target=scan:deps --all",
    "scan:code": "sonarqube-verify",
    "graph": "npx nx graph",
    "fixtures:interfaces": "ts-node -r tsconfig-paths/register ./utils/create-schema-interfaces.ts",
    "fixtures:html": "ts-node -r tsconfig-paths/register ./utils/create-html-certificate.ts",
    "fixtures:pdf": "ts-node -r tsconfig-paths/register ./utils/create-pdf-certificate.ts",
    "fixtures:generate": "ts-node -r tsconfig-paths/register ./utils/generate-fixtures-from-json.ts",
    "schema:dereference": "ts-node -r tsconfig-paths/register ./utils/dereference-json-schema.ts"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.1.0",
    "ajv": "8.12.0",
    "ajv-formats": "2.1.1",
    "axios": "^1.6.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "debug": "^4.3.4",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "ip-regex": "^5.0.0",
    "json-schema-to-typescript": "^10.1.5",
    "lato-font": "^3.0.0",
    "lodash.clone": "^4.5.0",
    "lodash.clonedeepwith": "^4.5.0",
    "lodash.flatten": "^4.4.0",
    "lodash.get": "^4.4.2",
    "lodash.groupby": "^4.6.0",
    "lodash.merge": "^4.6.2",
    "lodash.set": "^4.3.2",
    "node-cache": "^5.1.2",
    "pdfmake": "0.2.9",
    "reflect-metadata": "^0.2.1",
    "semver-lite": "0.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@jscutlery/semver": "^4.2.0",
    "@markedjs/html-differ": "^3.0.4",
    "@nx/esbuild": "17.2.8",
    "@nx/jest": "17.2.8",
    "@nx/js": "17.2.8",
    "@nx/node": "17.2.8",
    "@types/debug": "^4.1.12",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/json-schema": "^7.0.15",
    "@types/lodash.clone": "^4.5.9",
    "@types/lodash.clonedeepwith": "^4.5.9",
    "@types/lodash.flatten": "^4.4.9",
    "@types/lodash.get": "^4.4.9",
    "@types/lodash.groupby": "^4.6.9",
    "@types/lodash.merge": "^4.6.9",
    "@types/lodash.set": "^4.3.9",
    "@types/node": "20.11.0",
    "@types/pdfmake": "^0.2.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "audit-ci": "^6.6.1",
    "danger": "^11.3.1",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "eslint-plugin-sonarjs": "^0.23.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "full-icu": "^1.5.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.6",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lato-font": "^3.0.0",
    "lint-staged": "^15.2.0",
    "ngx-deploy-npm": "^7.1.0",
    "nx": "17.2.8",
    "pdf2pic": "^3.1.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "weak-napi": "^2.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "yargs": "^17.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
