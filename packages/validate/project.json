{
  "name": "validate",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/validate/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/validate",
        "tsConfig": "packages/validate/tsconfig.lib.json",
        "packageJson": "packages/validate/package.json",
        "main": "packages/validate/src/index.ts",
        "assets": ["packages/validate/*.md"]
      }
    },
    "example": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/validate",
        "command": "npx ts-node -r tsconfig-paths/register example.ts"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/validate/**/*.ts"]
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rimraf -rf dist/packages/validate"
      }
    },
    "cleanup": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rimraf -rf dist/packages/validate coverage/packages/validate"
      }
    },
    "scan:deps": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/validate",
        "command": "audit-ci --config ../../audit-ci.json"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/validate/jest.config.ts",
        "codeCoverage": true,
        "coverageReporters": ["json", "lcov"],
        "coverageDirectory": "../../coverage/packages/validate",
        "coverageThreshold": {
          "global": {
            "statements": 80,
            "branches": 65,
            "functions": 60,
            "lines": 85
          }
        }
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "skipCommitTypes": ["docs", "ci"],
        "commitMessageFormat": "chore(${projectName}): release version ${version} [skip ci]",
        "tagPrefix": "@s1seven/schema-tools-${projectName}@",
        "trackDeps": true,
        "push": true,
        "postTargets": ["validate:release", "validate:publish"]
      }
    },
    "release": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
