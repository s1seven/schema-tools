{
  "name": "validate",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/validate/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/validate",
        "tsConfig": "packages/validate/tsconfig.lib.json",
        "packageJson": "packages/validate/package.json",
        "main": "packages/validate/src/index.ts",
        "assets": ["packages/validate/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs validate {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/validate/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/validate/jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true,
        "coverageReporters": ["json", "lcov"]
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
