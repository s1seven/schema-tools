{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", "node_modules"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.json"],
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "ignoredDependencies": ["pdf2pic", "@markedjs/html-differ"],
            "ignoredFiles": ["packages/versioning/test/**/*"],
            "includeTransitiveDependencies": true
          }
        ]
      }
    }
  ]
}
