{
  "name": "@s1seven/schema-tools-certificate-summary",
  "version": "0.2.5",
  "description": "build certificate summary from common general properties",
  "author": "getlarge <ed@getlarge.eu>",
  "homepage": "https://github.com/s1seven/schema-tools/tree/main/packages/certificate-summary#readme",
  "license": "Apache-2.0",
  "private": false,
  "main": "dist/index",
  "types": "dist/index",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s1seven/schema-tools.git"
  },
  "bugs": {
    "url": "https://github.com/s1seven/schema-tools/issues"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf -rf ./dist",
    "cleanup": "rimraf -rf dist coverage",
    "compile:node": "tsc -p tsconfig.build.json",
    "compile": "npm run compile:node",
    "lint": "eslint -c ../../.eslintrc.js \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:cov": "rimraf -rf ./coverage && jest --ci --coverage",
    "test:staged": "jest --runInBand --onlyChanged",
    "scan:deps": "audit-ci --config ../../audit-ci.json"
  },
  "dependencies": {
    "@s1seven/schema-tools-extract-emails": "^0.3.5",
    "@s1seven/schema-tools-types": "^0.5.0",
    "@s1seven/schema-tools-utils": "^0.2.1"
  }
}
