        "outputFileName": "generateContent",
        "tsConfig": "packages/generate-en10168-pdf-template/tsconfig.lib.json",
        "thirdParty": true,
        "platform": "node",
        "format": ["cjs"],
        "generatePackageJson": false
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
