{
  "name": "@s1seven/schema-tools-generate-coa-pdf-template",
  "version": "0.1.3",
  "license": "Apache-2.0",
  "main": "dist/generateContent.js",
  "homepage": "https://github.com/s1seven/schema-tools/tree/master/packages/generate-coa-pdf-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s1seven/schema-tools/.git"
  },
  "bugs": {
    "url": "https://github.com/s1seven/schema-tools/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "publicConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "targets": {
    "main": {
      "engines": {
        "node": ">=12.x"
      },
      "source": "src/generateContent.ts",
      "distDir": "./dist",
      "optimize": true,
      "outputFormat": "commonjs",
      "sourceMap": false,
      "includeNodeModules": {
        "@s1seven/schema-tools-generate-pdf-template-helpers": true
      }
    }
  },
  "scripts": {
    "build": "parcel build --no-cache --target=main",
    "compile": "npm run create-interfaces && npm run build",
    "lint": "eslint -c ../../.eslintrc.js \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "rimraf -rf ./coverage && jest --ci --coverage",
    "test:staged": "jest --runInBand --onlyChanged",
    "scan:deps": "audit-ci --config ../../audit-ci.json",
    "create-example": "node ./utils/create-example.js",
    "create-interfaces": "node ./utils/create-schema-interfaces.js https://schemas.s1seven.com/coa-schemas/v0.0.4/schema.json ./src/types/schemaTypes.ts"
  },
  "dependencies": {
    "@s1seven/schema-tools-generate-pdf-template-helpers": "^0.2.1",
    "pdfmake": "^0.2.4"
  },
  "devDependencies": {
    "@s1seven/schema-tools-generate-interfaces": "^0.0.23",
    "@s1seven/schema-tools-utils": "^0.0.23",
    "@types/pdfmake": "^0.1.19",
    "full-icu": "^1.4.0",
    "lato-font": "^3.0.0",
    "parcel": "^2.0.0-rc.0",
    "typescript": "^4.4.3"
  }
}
