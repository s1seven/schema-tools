{
  "name": "generate-coa-pdf-template",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/generate-coa-pdf-template/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "packages/generate-coa-pdf-template/dist",
        "outputFileName": "generateContent",
        "main": "packages/generate-coa-pdf-template/src/generateContent.ts",
        "tsConfig": "packages/generate-coa-pdf-template/tsconfig.lib.json",
        "thirdParty": true,
        "format": ["cjs"],
        "generatePackageJson": false
      },
      "configurations": {
        "development": {
          "minify": false
        },
        "production": {
          "minify": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/generate-coa-pdf-template/**/*.ts"]
      }
    },
    "scan:deps": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/generate-coa-pdf-template",
        "command": "audit-ci --config ../../audit-ci.json"
      }
    },
    "create-example": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/generate-coa-pdf-template",
        "command": "node ./utils/create-example.js"
      },
      "dependsOn": ["build"]
    },
    "create-interfaces": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/generate-coa-pdf-template",
        "command": "node ./utils/create-schema-interfaces.js https://schemas.s1seven.com/coa-schemas/v0.2.0/schema.json ./src/types/schemaTypes.ts"
      },
      "dependsOn": ["build"]
    },
    "create-interfaces-interactive": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/generate-coa-pdf-template",
        "command": "node ../../utils/create-schema-interfaces-interactive.js ./src/types/schemaTypes.ts"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/generate-coa-pdf-template/jest.config.ts",
        "codeCoverage": true,
        "coverageReporters": ["json", "lcov"],
        "coverageDirectory": "../../coverage/packages/generate-coa-pdf-template",
        "coverageThreshold": {
          "global": {
            "statements": 70,
            "branches": 35,
            "functions": 80,
            "lines": 65
          }
        }
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
