{
  "name": "generate-html",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/generate-html/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/generate-html",
        "tsConfig": "packages/generate-html/tsconfig.lib.json",
        "packageJson": "packages/generate-html/package.json",
        "main": "packages/generate-html/src/index.ts",
        "assets": ["packages/generate-html/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs generate-html {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/generate-html/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/generate-html/jest.config.ts",
        "codeCoverage": true,
        "coverageReporters": ["json", "lcov"],
        "coverageDirectory": "../../coverage/packages/generate-html",
        "coverageThreshold": {
          "global": {
            "statements": 70,
            "branches": 60,
            "functions": 70,
            "lines": 70
          }
        }
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
