{
  "extends": ["../../.eslintrc.js"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.json"],
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "ignoredDependencies": ["pdf2pic"],
            "includeTransitiveDependencies": true
          }
        ]
      }
    }
  ]
}
