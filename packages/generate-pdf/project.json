{
  "name": "generate-pdf",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/generate-pdf/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/generate-pdf",
        "tsConfig": "packages/generate-pdf/tsconfig.lib.json",
        "packageJson": "packages/generate-pdf/package.json",
        "main": "packages/generate-pdf/src/index.ts",
        "assets": ["packages/generate-pdf/*.md"]
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/generate-pdf/**/*.ts"]
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rimraf -rf dist/packages/generate-pdf"
      }
    },
    "cleanup": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rimraf -rf dist/packages/generate-pdf coverage/packages/generate-pdf"
      }
    },
    "example:en10168": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/generate-pdf",
        "command": "node example.js"
      },
      "dependsOn": ["build"]
    },
    "example:coa": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/generate-pdf",
        "command": "node example_coa.js"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/generate-pdf/jest.config.ts",
        "codeCoverage": true,
        "coverageReporters": ["json", "lcov"],
        "coverageDirectory": "../../coverage/packages/generate-pdf",
        "coverageThreshold": {
          "global": {
            "statements": 85,
            "branches": 70,
            "functions": 85,
            "lines": 85
          }
        }
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "skipCommitTypes": ["docs", "ci"],
        "commitMessageFormat": "chore(${projectName}): release version ${version} [skip ci]"
      }
    }
  },
  "tags": []
}
