{
  "name": "@s1seven/schema-tools-generate-pdf-template-helpers",
  "version": "0.4.8",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "homepage": "https://github.com/s1seven/schema-tools/tree/master/packages/generate-pdf-template-helpers#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s1seven/schema-tools/.git"
  },
  "bugs": {
    "url": "https://github.com/s1seven/schema-tools/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "publicConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "targets": {
    "main": {
      "engines": {
        "node": ">=12.x"
      }
    }
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf -rf ./dist",
    "cleanup": "rimraf -rf dist coverage",
    "compile": "tsc -p tsconfig.build.json",
    "lint": "eslint -c ../../.eslintrc.js \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:cov": "rimraf -rf ./coverage && jest --ci --coverage",
    "test:staged": "jest --runInBand --onlyChanged",
    "scan:deps": "audit-ci --config ../../audit-ci.json"
  }
}
