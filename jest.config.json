{
  "rootDir": ".",
  "coverageDirectory": "./coverage",
  "collectCoverageFrom": ["**/src/**", "!**/dist/**", "!**/dist.browser/**", "!**/test/**"],
  "coveragePathIgnorePatterns": ["coverage"],
  "coverageThreshold": {
    "global": {
      "statements": 70,
      "branches": 50,
      "functions": 65,
      "lines": 70
    }
  },
  "maxConcurrency": 2,
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": ".*\\.spec\\.ts$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "reporters": ["default", "jest-sonar"]
}
