{
  "verbose": true,
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "coverageReporters": ["lcov", "text"],
  "collectCoverageFrom": ["**/src/**", "!**/test/**"],
  "coverageThreshold": {
    "global": {
      "statements": 30,
      "branches": 20,
      "functions": 30,
      "lines": 30
    }
  },
  "maxConcurrency": 2,
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}
