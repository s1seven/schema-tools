{
  "targetDependencies": {
    "version": [
      {
        "target": "version",
        "projects": "dependencies"
      }
    ]
  },
  "release": {
    "projects": ["*"],
    "projectsRelationship": "independent",
    "releaseTagPattern": "@s1seven/schema-tools-{projectName}@{version}",
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github"
      }
    },
    "version": {
      "conventionalCommits": false
    },
    "git": {
      "commit": true,
      "push": true,
      "pushRemote": "origin",
      "tag": true
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "clean": {
      "cache": true
    },
    "cleanup": {
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "scan:deps": {
      "cache": true
    },
    "@nx/jest:jest": {
      "inputs": ["default", "{workspaceRoot}/fixtures/**", "{workspaceRoot}/jest.preset.js"],
      "cache": true,
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "defaultBase": "main",
  "nxCloudAccessToken": "YmViZWE0NjUtYjAzYi00NjUzLTk0YzctNDNkMzllMTk1NTgyfHJlYWQtd3JpdGU=",
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  }
}
