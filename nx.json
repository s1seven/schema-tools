{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDependencies": {
    "version": [
      {
        "target": "version",
        "projects": "dependencies"
      }
    ]
  },
  "release": {
    "projects": ["*"],
    "projectsRelationship": "independent",
    "releaseTagPattern": "@s1seven/schema-tools-{projectName}@{version}",
    "changelog": {
      "projectChangelogs": {
        "createRelease": "github"
      }
    },
    "git": {
      "commit": true,
      "push": true,
      "pushRemote": "origin",
      "tag": true
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": ["production", "^production"]
    },
    "clean": {
      "cache": true
    },
    "cleanup": {
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "scan:deps": {
      "cache": true
    },
    "@nx/jest:jest": {
      "inputs": ["default", "{workspaceRoot}/fixtures/**", "{workspaceRoot}/jest.preset.js"],
      "cache": true,
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "dist/packages/{projectName}",
        "registry": "https://registry.npmjs.org/"
      },
      "dependsOn": ["build"]
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "defaultBase": "main",
  "nxCloudAccessToken": "YmViZWE0NjUtYjAzYi00NjUzLTk0YzctNDNkMzllMTk1NTgyfHJlYWQtd3JpdGU=",
  "pluginsConfig": {
    "@nx/js": {
      "analyzeSourceFiles": true
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [],
    "production": ["default"]
  }
}
